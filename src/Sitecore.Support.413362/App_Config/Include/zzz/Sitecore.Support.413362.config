<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:set="http://www.sitecore.net/xmlconfig/set/" xmlns:role="http://www.sitecore.net/xmlconfig/role/">
    <sitecore role:require="Standalone OR ContentManagement OR ContentDelivery">
        <events>
            <event name="publish:end">
                <handler type="Sitecore.Support.XA.Foundation.Presentation.EventHandlers.LayoutXmlCacheClearer, Sitecore.Support.413362"
                        patch:instead="*[@type='Sitecore.XA.Foundation.Presentation.EventHandlers.LayoutXmlCacheClearer, Sitecore.XA.Foundation.Presentation']"  method="OnPublishEnd"/>
            </event>

            <event name="publish:end:remote">
                <handler patch:instead="*[@method='OnPublishEnd']" method="OnPublishEndRemote"
				        type="Sitecore.XA.Feature.Composites.EventHandlers.CompositesXmlCacheClearer, Sitecore.XA.Feature.Composites" />

                <handler patch:instead="*[@type='Sitecore.XA.Foundation.Presentation.EventHandlers.LayoutXmlCacheClearer, Sitecore.XA.Foundation.Presentation']"
                        type="Sitecore.Support.XA.Foundation.Presentation.EventHandlers.LayoutXmlCacheClearer, Sitecore.Support.413362"
                        method="OnPublishEndRemote" />

            </event>
        </events>
    </sitecore>
</configuration>